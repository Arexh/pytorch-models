{
    "name": "Criteo_Wide_Deep",
    "n_gpu": 1,

    "arch": {
        "type": "LRModel",
        "args": {
            "dense_feat_dim": 13,
            "sparse_feat_dim": 26,
            "feature_size": [1186,530,264474,103567,260,15,10667,543,4,28256,4659,222452,3059,27,8579,172323,11,3764,1804,5,200210,16,16,36846,70,27959]
        }
    },
    "data_loader": {
        "type": "MyCriteoLoader",
        "args":{
            "data_dir": "./dataset/criteo_medium/train.csv",
            "sparse_norm": true,
            "train": true,
            "rebuild_cache": false,
            "batch_size": 50000,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_log_loss",
    "metrics": ["log_loss", "roc_auc_score"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 1,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
