{
    "name": "Criteo_Wide_Deep",
    "n_gpu": 1,

    "arch": {
        "type": "WideDeepModel",
        "args": {
            "dense_feat_dim": 13,
            "sparse_feat_dim": 26,
            "embedding_size": 8,
            "feature_size": [1460, 583, 10131227, 2202608, 305, 24, 12517, 633, 3, 93145, 5683, 8351593, 3194, 27, 14992, 5461306, 10, 5652, 2173, 4, 7046547, 18, 15, 286181, 105, 142572],
            "dnn_dropout": 0.5,
            "dnn_hidden_units": [400, 400, 400]
        }
    },
    "data_loader": {
        "type": "MyCriteoLoader",
        "args":{
            "data_dir": "~/HuiOhYoung/deepmodels/data/raw/train.txt",
            "cache_path": "cache/criteo_complete",
            "sparse_norm": false,
            "train": true,
            "rebuild_cache": false,
            "batch_size": 50000,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8,
            "pin_memory": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.00001,
            "amsgrad": true
        }
    },
    "loss": "bce_log_loss",
    "metrics": ["roc_auc_score"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 999,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
